<?xml version="1.0" encoding="utf-8"?>

 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:minHeight="@dimen/detail_title_height"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:background="@color/colorPrimaryDark"
        tools:text="Description example: Every day when I wake up... I haven't the time that has passed anymore..." />

    <ImageView
        android:id="@+id/detail_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/colorAccent"
        tools:background="@drawable/ic_priority"/>

    <TextView
        style="@style/regular_text_view"
        android:id="@+id/detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_below="@id/detail_description"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="09/30/1977" />

    <TextView
        style="@style/regular_text_view"
        android:id="@+id/detail_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/detail_date"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="Vila da Penha, RJ" />

    <TextView
        style="@style/regular_text_view"
        android:id="@+id/detail_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:text="@string/task_detail_empty_view" />

</RelativeLayout>

