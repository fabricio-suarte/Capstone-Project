<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.Detail" parent="AppTheme">
        <item name="android:windowEnterTransition">@transition/detail_activity_enter</item>
        <item name="android:windowReturnTransition">@transition/detail_activity_return</item>
    </style>


    <style name="ExpandedTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="regular_text_view">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="input_view" parent="regular_text_view">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
